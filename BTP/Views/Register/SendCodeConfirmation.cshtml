@{
    Layout = "_Layout_register";
}
<div class="container-scroller">
    <div class="main-panel">
        <div class="content-wrapper">

            <div class="container-fluid page-body-wrapper full-page-wrapper">
                <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
                    <div class="row flex-grow">
                        <div class="col-lg-12 d-flex align-items-center justify-content-center">
                            <div class="auth-form-transparent text-left p-0">
                                <div class="row">
                                    <div class="brand-logo">
                                        <center><img src="~/images/logo.png" alt="logo" style="width:300px;" id="floatingLogo"></center>
                                    </div>
                                    <div class="col-lg-12 grid-margin stretch-card">
                                        <div class="col-lg-12 grid-margin stretch-card">
                                            <div class="col-md-12 grid-margin grid-margin-md-0 stretch-card">
                                                <div class="card">
                                                    <form class="pt-3" method="post" asp-controller="Register" asp-action="IsCodeValide">
                                                        <div class="card-body">
                                                            <i><b>On a envoyer un Email a votre adresse, Veuillez saisir le code envoyer ici:</b></i>
                                                            <div class="form-container">
                                                                <div class="form-group">
                                                                    <label for="exampleInputEmail">Code de Confirmation</label>
                                                                    <div class="input-group">
                                                                        <div class="input-group-prepend bg-transparent">
                                                                            <span class="input-group-text bg-transparent border-right-0">
                                                                                <i class="mdi mdi-gmail text-primary"></i>
                                                                            </span>
                                                                        </div>
                                                                        <input type="number" name="code" class="form-control form-control-lg border-left-0" id="exampleInputEmail" placeholder="Votre email">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="my-3">
                                                                <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit"> VALIDER </button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>