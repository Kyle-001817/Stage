@model List<BdqGroupViewModel>

<div class="container-scroller">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card shadow-sm">
                        <div class="table-responsive">
                            <div class="card-body">
                                <center>
                                    <h4 class="card-title text-uppercase font-weight-bold">Bordereau du Détail Quantitatif</h4>
                                    <h4 class="card-title">@ViewBag.Bdq.Titre</h4>
                                </center>

                                @if (Model != null && Model.Any())
                                {
                                    foreach (var group in Model)
                                    {
                                        <hr />
                                        <center>
                                            <h5 class="text-primary">@group.SerieTravaux.Nom</h5>
                                        </center>
                                        <hr />
                                        <table class="table table-hover table-bordered">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th>Designation des travaux</th>
                                                    <th>Unite</th>
                                                    <th>Quantite</th>
                                                    <th>Materiaux</th>
                                                    <th>Unite</th>
                                                    <th>Quantite</th>
                                                    <th>PU (Ar)</th>
                                                    <th>Montant</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in group.Bdqs)
                                                {
                                                    <tr style="height: 50px">
                                                        <td>@item.Designation</td>
                                                        <td class="text-center">@item.NomUniteBdq</td>
                                                        <td class="text-center">@item.QuantiteBdq</td>
                                                        <td style="width:250px">
                                                            @foreach (var mat in item.NomMateriaux)
                                                            {
                                                                <div style="border-bottom: 1px solid #ccc; padding: 5px;">@mat</div>
                                                            }
                                                        </td>

                                                        <td class="text-center">
                                                            @foreach (var unit in item.NomUniteMateriaux)
                                                            {
                                                                <div style="border-bottom: 1px solid #ccc; padding: 5px;">@unit</div>
                                                            }
                                                        </td>
                                                        <td class="text-center">
                                                            @foreach (var quant in item.QuantiteMateriaux)
                                                            {
                                                                <div style="border-bottom: 1px solid #ccc; padding: 5px;">@(quant.HasValue ? quant.Value.ToString("N2") : "N/A")</div>
                                                            }
                                                        </td>
                                                        <td class="text-center">
                                                            @foreach (var price in item.PrixUnitaire)
                                                            {
                                                                <div style="border-bottom: 1px solid #ccc; padding: 5px;">@(price.HasValue ? price.Value.ToString("N2") : "N/A")</div>
                                                            }
                                                        </td>
                                                        <td class="text-center">
                                                            @foreach (var amount in item.Montant)
                                                            {
                                                                <div style="border-bottom: 1px solid #ccc; padding: 5px;">@(amount.HasValue ? amount.Value.ToString("N2") : "N/A")</div>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                                <tr class="font-weight-bold bg-light">
                                                    <td colspan="6" class="text-right" style="font-family:Airborne; background-color: cornflowerblue; color:white;">Sous Total @group.SerieTravaux.Nom</td>
                                                    <td colspan="2" class="text-right" style="font-family:Airborne; background-color: cornflowerblue; color:white;">
                                                        @(group.SousTotal.HasValue ? group.SousTotal.Value.ToString("N2") : "N/A")
                                                    </td>
                                                </tr>
                                                @if (!group.Bdqs.Any())
                                                {
                                                    <tr>
                                                        <td colspan="8" class="text-center">Aucun détail trouvé pour cet ID.</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center">Aucun Détail trouvé.</td>
                                    </tr>
                                }
                            <div class="d-flex justify-content-center mt-3">
                                <a class="btn btn-primary mx-2" asp-controller="Admin" asp-action="F_bde" style="font-weight:bold; text-transform:uppercase;">
                                    Generer un BDE
                                </a>
                                <a class="btn btn-secondary mx-2" asp-controller="Admin" asp-action="BDE" style="font-weight:bold; text-transform:uppercase;">
                                    Voir BDE
                                </a>
                                <a class="btn btn-info mx-2" asp-controller="Admin" asp-action="F_personnel" style="font-weight:bold; text-transform:uppercase;">
                                    Salaire des personnels
                                </a>
                                <hr />
                            </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
