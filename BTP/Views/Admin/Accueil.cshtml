@{
    Layout = "_Layout_accueil";
}
<style>
    body{
    background-color: white;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
    }
    /* CSS pour le header */
    #header {
        background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
        /* Dégradé pour un effet moderne */
        color: white;
        padding: 20px;
        position: relative;
        text-align: center;
        overflow: hidden;
    }

            #header .logo .icon {
                font-size: 2.5em;
            }

        #header .content {
            margin-top: 60px;
        }

        #header h1 {
            font-size: 3em;
            margin: 0;
            font-weight: bold;
        }

        #header p {
            font-size: 1.25em;
        }

    nav {
        margin-top: 20px;
    }

        nav ul {
            list-style: none;
            padding: 0;
        }

            nav ul li {
                display: inline;
                margin: 0 15px;
            }

                nav ul li a {
                    color: white;
                    text-decoration: none;
                    font-size: 1em;
                    transition: color 0.3s;
                }

                    nav ul li a:hover {
                        color: #ffeb3b; 
                    }

</style>
<header id="header">
    <div class="logo">
        <span class="fas fa-cogs fa-2x"></span>
    </div>
    <div class="content">
        <div class="inner">
            <h1>ANDRICORPS</h1>
            <p>
                CONSTRUCTIONS
            </p>
        </div>
    </div>
    <nav>
        <ul>
            <li><a asp-controller="Admin" asp-action="F_About">Creer un nouveau Projet</a></li>
        </ul>
    </nav>
</header>
