@{
    var unite = ViewData["unite"] as List<Unite>;
    var materiel = ViewData["materiel"] as Materiel;
}

<div class="modal fade show" id="modificationModal" tabindex="-1" aria-labelledby="modificationModalLabel" aria-hidden="true" style="display: block;">
    <div class="modal-dialog">
        <form asp-controller="Admin" asp-action="UpdateMateriel" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modificationModalLabel">Modifier le matériel</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                @if (materiel != null)
                {
                        <div class="modal-body">
                            <input type="hidden" name="IdMateriel" value="@materiel.IdMateriel" />
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Matériel:</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" name="Nom" value="@materiel.Nom" />
                            </div>
                        </div>
                        <div class="form-group row mt-3">
                            <label class="col-sm-4 col-form-label">Unité:</label>
                            <div class="col-sm-8">
                                <select class="form-select" name="IdUnite">
                                    @foreach (var item in unite)
                                    {
                                        if (item.IdUnite == materiel.IdUnite) // Vérifiez si c'est l'unité actuelle
                                        {
                                            <option value="@item.IdUnite" selected>@item.Nom</option>
                                        }
                                        else
                                        {
                                            <option value="@item.IdUnite">@item.Nom</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group row mt-3">
                            <label class="col-sm-4 col-form-label">Prix Unitaire:</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" name="PrixUnitaire" value="@materiel.PrixUnitaire" />
                            </div>
                        </div>
                    </div>
                }
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                </div>
            </div>
        </form>
    </div>
</div>
