@{
    Layout = "_Layout";
    var unite = ViewData["unite"] as List<Unite>;
}
<div class="container-scroller">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="col-md-12 grid-margin grid-margin-md-0 stretch-card">
                            <div class="card">
                                <form class="forms-sample" asp-controller="Admin" asp-action="Insert_detailBdq" method="post">
                                    <div class="card-body">
                                        <div class="form-group row align-items-center">
                                            <div class="form-group">
                                                <center><h3><b>@ViewBag.st.Nom - @ViewBag.bdq.Titre</b></h3></center>
                                                <label for="exampleTextarea1">Designation des travaux</label>
                                                <textarea class="form-control" id="exampleTextarea1" rows="4" name="designation"></textarea>
                                            </div>

                                            <label class="col-sm-2 col-form-label">Unite: </label>
                                            <div class="col-sm-2">
                                                <select class="js-example-basic-single w-100" name="id_unite">
                                                    @if (unite != null)
                                                    {
                                                        @foreach (var item in unite)
                                                        {
                                                            <option value="@item.IdUnite">@item.Nom</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                            <label class="col-sm-2 col-form-label">Quantite: </label>
                                            <div class="col-sm-6">
                                                <input class="form-control" type="text" name="quantite" placeholder="Quantite" lang="en" inputmode="decimal" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-12 text-right">
                                                <center><button type="submit" style="width: 200px; height: 50px;" class="btn btn-primary">VALIDER</button></center>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelector('form').addEventListener('submit', function (event) {
        let quantiteField = document.querySelector('input[name="quantite"]');
        if (quantiteField) {
            quantiteField.value = quantiteField.value.replace('.', ',');
        }
    });
</script>
