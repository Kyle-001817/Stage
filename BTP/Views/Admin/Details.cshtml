@{
    Layout = "_Layout";
    var details = ViewData["details"] as List<DetailBdq>;
}
<div class="container-scroller">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="col-md-12 grid-margin grid-margin-md-0 stretch-card">
                            <div class="card">
                                <div class="table-responsive">
                                    <div class="card-body">
                                        <h4 class="card-title">Details</h4>
                                        <hr>
                                        <table class="table table-striped" style="height: 100px;">
                                            <thead>
                                                <tr>
                                                    <th>Designation</th>
                                                    <th>Unite</th>
                                                    <th>Quantite</th>
                                                    <th>Materiaux</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (details != null && details.Any())
                                                {
                                                    foreach (var item in details)
                                                    {
                                                        <tr style="height: 50px">
                                                            <td style="width: 500px">@item.Designation</td>
                                                            <td>@item.Unite.Nom</td>
                                                            <td>@item.Quantite</td>
                                                            <td>
                                                                <br />
                                                                <a class="nav-link" asp-controller="Admin" asp-action="F_ajoutMateriaux_inBdq" asp-route-idDetailBdq="@item.IdDetailBdq">Ajouter materiaux</a>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td colspan="4">Aucun Details trouvé.</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>