@{
  Layout = "_Layout";
}
<div class="container-scroller">
    <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="col-md-12 grid-margin grid-margin-md-0 stretch-card">
                        <div class="card">
                            <form class="forms-sample" asp-controller="Admin" asp-action="Insert_TypeBordereau" method="post">
                            <div class="card-body">
                                <div class="form-group row align-items-center">
                                    <label class="col-sm-2 col-form-label">Type de bordereau: </label>
                                    <div class="col-sm-12">
                                        <input class="form-control" type="text" name="type" placeholder="Type de bordereau"/>
                                    </div>
                                </div>
                                        @Html.ValidationSummary(true, "", new { @class = "form-group custom-validation-summary" })
                                <div class="form-group row">
                                    <div class="col-sm-12 text-right">
                                        <center><button type="submit" style="width: 200px; height: 50px;" class="btn btn-primary">VALIDER</button></center>
                                    </div>
                                </div>
                            </div>
                            </form>
                        </div>
                        </div>
                </div>
            </div>
          </div>
        </div>
    </div>
</div>