@{
    Layout = "_Layout";
}
<div class="container-scroller">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="col-md-12 grid-margin grid-margin-md-0 stretch-card">
                            <div class="card">
                                <form class="forms-sample" asp-controller="Admin" asp-action="Insert_about" method="post">
                                    <div class="card-body">
                                        <div class="form-group row align-items-center">
                                            <label class="col-sm-2 col-form-label">Lieu de Construction: </label>
                                            <div class="col-sm-10">
                                                <input class="form-control" type="text" name="lieu" placeholder="Lieu de Construction" />
                                            </div>
                                        </div>
                                        <div class="form-group row align-items-center">
                                            <label class="col-sm-2 col-form-label">Nom du Client: </label>
                                            <div class="col-sm-4">
                                                <input class="form-control" type="text" name="client" placeholder="Client" />
                                            </div>

                                            <label class="col-sm-2 col-form-label">Adresse du Client: </label>
                                            <div class="col-sm-4">
                                                <input class="form-control" type="text" name="adresse" placeholder="Adresse" />
                                            </div>
                                        </div>
                                        <div class="form-group row align-items-center">
                                            <label class="col-sm-2 col-form-label">Numero de telephone: </label>
                                            <div class="col-sm-4">
                                                <input class="form-control" type="text" name="telephone" placeholder="Telephone" />
                                            </div>

                                            <label class="col-sm-2 col-form-label">Adresse Email: </label>
                                            <div class="col-sm-4">
                                                <input class="form-control" type="email" name="email" placeholder="Email" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-12 text-right">
                                                <center><button type="submit" style="width: 200px; height: 50px;" class="btn btn-primary">VALIDER</button></center>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>